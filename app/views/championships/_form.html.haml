= form_with(model: championship) do |form|
  - if championship.errors.any?
    #error_explanation
      %h2
        = pluralize(championship.errors.count, "error")
        prohibited this championship from being saved:
      %ul
        - championship.errors.each do |error|
          %li= error.full_message
  .field
    = form.label :name
    = form.text_field :name
  .actions
    = form.submit
