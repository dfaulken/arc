= form_with(model: race) do |form|
  - if race.errors.any?
    #error_explanation
      %h2
        = pluralize(race.errors.count, "error")
        prohibited this race from being saved:
      %ul
        - race.errors.each do |error|
          %li= error.full_message
  .field
    = form.label :season_id
    = form.number_field :season_id
  .field
    = form.label :track_id
    = form.number_field :track_id
  .field
    = form.label :date
    = form.date_select :date
  .field
    = form.label :index
    = form.number_field :index
  .field
    = form.label :laps
    = form.number_field :laps
  .actions
    = form.submit
