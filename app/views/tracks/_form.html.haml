= form_with(model: track) do |form|
  - if track.errors.any?
    #error_explanation
      %h2
        = pluralize(track.errors.count, "error")
        prohibited this track from being saved:
      %ul
        - track.errors.each do |error|
          %li= error.full_message
  .field
    = form.label :name
    = form.text_field :name
  .field
    = form.label :track_type
    = form.select :track_type, options_for_select(TrackType.types)
  .actions
    = form.submit
